{#
 # Jinja2 macro which converts Ansible map into no section INI format
 #}

{%- macro ini_encode(
      item,
      delimiter="=" ) %}

	{%- for property, value in item.items() | sort %}
		{%- if value is number or (value is string and value|length) %}
{{ property ~ delimiter ~ value ~ "\n" }}
		{%- endif %}
	{%- endfor %}
{%- endmacro %}
